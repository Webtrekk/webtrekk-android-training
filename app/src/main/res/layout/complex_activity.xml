<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainPageBackground"
    tools:context="com.webtrekk.webtrekksdk.training.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="15"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="0dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onPage1Click"
        android:textColor="@color/pageTextColor"
        android:textSize="20dp"
        android:background="@color/page1Background"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="@string/page1_name"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onPage2Click"
        android:textSize="20dp"
        android:textColor="@color/pageTextColor"
        android:background="@color/page2Background"
        android:text="@string/page2_name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="85"
        android:gravity="center"
        android:background="@color/page1Background"
        android:id="@+id/page1_view"
        android:layout_height="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="40dp"
            android:layout_height="wrap_content"
            android:textColor="@color/pageTextColor"
            android:text="@string/page1_name"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="85"
        android:gravity="center"
        android:background="@color/page2Background"
        android:visibility="gone"
        android:id="@+id/page2_view"
        android:layout_height="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textColor="@color/pageTextColor"
            android:text="@string/page1_name"/>
    </LinearLayout>
</LinearLayout>
